---
import Container from "./Container.astro";
import CTA from "./CTA.astro";
import SectionHeading from "./SectionHeading.astro";
import charactersData from "./Data/characters.json";
---

<section id="characters">
  <Container>
    <div class="relative flex flex-col items-center">
      <SectionHeading> Персонажи </SectionHeading>
    </div>

    <div class="flex-row items-center py-16">
      <div
        class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 gap-12 font-light"
      >
        <!-- card start-->
        {
          charactersData.map(({ name, description, image }) => (
            <div class="flex flex-col">
              <div class="p-6 flex flex-col border coal md:aspect-[3/5]">
                <div class="w-full h-auto justify-center items-center flex">
                  <img class="w-full" src={image} />
                </div>
                <p class="text-wrap w-full mt-6">{description}</p>
              </div>
              <div class="px-6 py-3">
                <p class="text-xl">{name}</p>
              </div>
            </div>
          ))
        }
        <!-- card end-->
      </div>
    </div>
    <div>
      <CTA>Создать</CTA>
    </div>
  </Container>
</section>
