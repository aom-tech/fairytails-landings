---
import Container from "./Container.astro";
import SectionHeading from "./SectionHeading.astro";
import featuresData from "./Data/features.json";
---

<section id="features">
  <Container>
    <div class="relative flex flex-col items-center">
      <SectionHeading> Возможности </SectionHeading>
    </div>

    <div class="flex-row items-center py-12 md:py-24">
      <div
        class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 gap-6 md:gap-12 font-light"
      >
        <!-- card start-->
        {
          featuresData.map(({ name1, name2, image }) => (
            <div>
              <div class="justify-start items-start gap-6 inline-flex">
                <div class="w-[50px] h-[50px] md:w-[70px] md:h-[70px] justify-center items-center flex flex-shrink-0">
                  <img src={image} />
                </div>
                <div class="flex-col justify-start items-start flex gap-1">
                  <div class="px-[7px] rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                    <div class="text-lg md:text-2xl text-ochre">{name1}</div>
                  </div>
                  <div class="px-[7px] rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                    <div class="text-base md:text-lg">{name2}</div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
        <!-- card end-->
      </div>
    </div>
  </Container>
</section>
