---
import Container from "./Container.astro";
import SectionHeading from "./SectionHeading.astro";
import CTA from "./CTA.astro";

import flowData from "./Data/flow.json";
---

<section id="flow">
  <Container>
    <div class="relative flex flex-col items-center">
      <SectionHeading> Создай свою сказку </SectionHeading>
      <div class="flex items-center py-3 md:w-6/12 md:py-10">
        <!-- <p class="text-lg font-normal leading-5 text-center md:text-left">С помощью нашего сервиса мы можете создать историю, которая понравится вам и вашему ребенку, выполнив несколько шагов:</p> -->
    </div>
    </div>

    <div class="flex flex-col space-y-12">
      {
        flowData.process.map(({ id, hid, bid, target, title, description, image }) => (
          <div class={"flex flex-col-reverse md:flex-row gap-x-6 " + (id % 2 === 0 && 'md:flex-row-reverse')}>
            <div class="flex md:w-1/2">
              <span class="font-kudry text-ochre text-7xl sm:text-[100px] sm:leading-[100px]">{id}.</span>
              <div class="text-black ml-3">
                <h3 class="font-kudry text-2xl sm:text-3xl sm:leading-10">{title}</h3>
                <p class="text-lg sm:text-xl mt-3 sm:mt-6">{description}</p>
              </div>
            </div>
            <img src={image} class="mb-8 md:m-0 md:w-1/2 aspect-[3/2] rounded-2xl object-cover"/>
        </div>
        ))
        }
    </div>
    <div class="mt-20 md:mt-36 mb-3 flex justify-center">
    <CTA>Создать</CTA>
  </div>
  </Container>
</section>
